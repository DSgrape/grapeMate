<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#f6f4f5 "
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!--ImageButton
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#00000000"
            android:src="@drawable/back2"
            android:layout_marginLeft="15dp"/-->
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/jalnan"
            android:textColor="#af7ed7 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:textSize="55dp"
            android:textStyle="bold" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#af7ed7" />
    <ScrollView
        android:scrollbarThumbVertical="@color/scroll"
        android:scrollbarSize="10dp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bd99e1"
                    android:fontFamily="@font/jalnan"
                    android:textSize="30dp"
                    android:text="제목"/>
                <EditText
                    android:id="@+id/et_title"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/jalnan"
                    android:textColor="#000000"
                    android:background="@drawable/edit_text2"
                    android:textSize="28dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bd99e1"
                    android:fontFamily="@font/jalnan"
                    android:textSize="30dp"
                    android:text="카테고리"/>
             <Spinner
                 android:textAlignment="center"
                 android:gravity="center"
                 android:layout_marginLeft="5dp"
                 android:id="@+id/spin"
                 android:layout_gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_setloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bd99e1"
                    android:fontFamily="@font/jalnan"
                    android:textSize="30dp"
                    android:text="내용"/>
                <EditText
                    android:id="@+id/et_content"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/jalnan"
                    android:textColor="#000000"
                    android:background="@drawable/edit_text"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bd99e1"
                    android:fontFamily="@font/jalnan"
                    android:textSize="30dp"
                    android:text="마감\n날짜"/>
                <CalendarView
                    android:id="@+id/cal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cen"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/jalnan"
            android:text="취소"
            android:background="@drawable/btn_up"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_ok"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/jalnan"
            android:text="확인"
            android:background="@drawable/btn_up2"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
